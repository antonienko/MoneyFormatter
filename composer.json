{
  "name": "antonienko/money-formatter",
  "type": "library",
  "description": "Formatter for moneyphp/money library using alcohol/iso4217 for obtaining the number of decimal digits in each currency",
  "keywords": ["money", "value object", "formatter", "currency"],
  "homepage": "http://www.antoniohs.com/2016/03/03/antonienkomoneyformatter-2-0/",
  "license": "MIT",
  "authors": [
    {
      "name": "Antonio Manuel Hernández Sánchez",
      "homepage": "http://antoniohs.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "antonienko\\MoneyFormatter\\": "lib/"
    }
  },
  "autoload-dev": {
    "psr-4": { "antonienko\\tests\\MoneyFormatter\\": "tests/" }
  },
  "require": {
    "php": ">=5.4",
    "symfony/yaml": "~2.0",
    "ext-intl": "1.1.*",
    "mathiasverraes/money" : "~3.0@beta",
    "alcohol/iso4217": "~2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.0"
  }
}